<section class= "form-auth text-center row d-flex justify-content-center banner_part">
  <div class='single_banner_slider'>
  <div class="banner_text">
    <div class="col-3 padding_top banner_text_iner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
      <%= bootstrap_devise_error_messages! %>

        <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control mt-2', placeholder: "First Name"%>
        <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control mt-2', placeholder: "Last Name"%>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control mt-2', placeholder: "Email"%>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control mt-2', placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control mt-2', placeholder: "Password confirmation"%>
         <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
        <%= f.submit t('.sign_up'), class: 'btn_3' %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
  </div>
  </div>
  </div>
</section>

