<!--::navigation part start::-->
  <header class="main_menu home_menu">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-12">
          <nav class="navbar navbar-expand-lg navbar-light">
            <%= link_to image_tag('logo.png', :size => "100x36"), root_path, class: "navbar-brand" %>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
              data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
              <span class="menu_icon"><i class="fas fa-bars"></i></span>
            </button>
            <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <% if user_signed_in?%>
                    <%= link_to "Auctions", root_path, class: "nav-link" %>
                  <% else %>
                    <%= link_to "Auctions", new_user_session_path, class: "nav-link"%>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <% if user_signed_in?%>
                    <%= link_to "My Auctions", auctions_path, class: "nav-link"%>
                  <% end %>
                </li>
                <li class="nav-item dropdown">
                  <% if user_signed_in?%>
                    <%= link_to current_user.email, user_path(current_user), class: "nav-link dropdown-toggle", role: "button"%>
                  <% else %>
                    <%= link_to "account", new_user_registration_path, class: "nav-link dropdown-toggle", role: "button"%>
                  <% end %>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                    <% if user_signed_in?%>
                      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item"%>
                    <% else %>
                      <%= link_to "Log in", new_user_session_path, class: "dropdown-item"%>
                      <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item"%>
                    <% end %>
                  </div>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </header>
<!-- Navigation part end-->

