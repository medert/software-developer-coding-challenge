<p id="notice"><%= notice %></p>

<h1 class="h3">Auctions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Make</th>
      <th>Current Bid</th>

    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= link_to auction.title, auction%></td>
        <td><%= link_to auction.make %></td>
        <td><%= link_to auction.current_price %></td>
        <td><%= link_to "Edit", edit_auction_path(auction) %></td>
        <td><%= link_to "Delete", auction, method: :delete, data: {confirm: 'Are you sure?'} %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auction', new_auction_path %>
