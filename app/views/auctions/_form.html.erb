
<%= form_with(model: auction, local: true, html: {multipart: true}) do |form| %>

  <div class='form-group'>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :make %><br>
    <%= form.text_field :make, class: 'form-control'%>
  </div>

  <div class='form-group'>
    <%= form.label :starting_price, 'Starting Price' %><br>
    <%= form.text_field :starting_price, class: 'form-control'%>
  </div>

  <div class='form-group'>
    <%= form.label :image, 'Image' %><br>
    <%= form.file_field :image, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.submit 'Start Auction', class: 'btn_3 bt-block btn-success' %>
  </div>
<% end %>
