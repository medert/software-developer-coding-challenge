<%= form_with(model: auction, local: true) do |form| %>
  <%= render "layouts/nav/validation", item: @auction%>

  <div class='form-group'>
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :make %><br>
    <%= form.text_field :make, class: 'form-control'%>
  </div>

  <div class='form-group'>
    <%= form.label :current_price, 'Starting Price' %><br>
    <%= form.text_field :current_price, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.submit 'Start Auction', class: 'btn bt-block btn-success' %>
  </div>
<% end %>
